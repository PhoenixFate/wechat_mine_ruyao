.index-content {
  width: 700rpx;
  height: auto;
  margin: 100rpx auto 100rpx;
  font: bold 34rpx "微软雅黑";
  color:#fff;
}

button {
  border-radius: 24rpx;
  border: none;
  font: bold 34rpx "微软雅黑";
  /*兼容小程序 start*/
  color: #fff!important;
  background-color: rgba(0, 0, 0, 0);
  /*兼容小程序end*/
}

.top,
.banner,
.row1 {
  margin-bottom: 24rpx;
}


/*----------------------------------top模块----------begin---------------------------------------------------*/
.top {
  height: 320rpx;
  width: 100%;
  background-image: url("https://picture.bytes-space.com/ruyao/index/userBackground.png");
  background-size: 100% 100%;
  position: relative;
}

.top image {
  position: absolute;
  left: 80rpx;
  top: 80rpx;
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
}

.user-properties{
  height: 100rpx;
  width: 250rpx;
  position: absolute;
  top: 110rpx;
  left: 300rpx;
  font-size: 36rpx;
}
/*----------------------------------top模块----------end-----------------------------------------------------*/


/*----------------------------------banner模块--------begin---------------------------------------------------*/
.banner{
  height: 120rpx;
  width: 100%;
  /*兼容小程序*/
  display: flex;
  /* 主轴对齐方式 */
  justify-content: center;
  /* 交叉轴对齐方式 */
  align-items: center;
}

.banner .introduction {
  height: 100%;
  width: 100%;
  background-image: url("https://picture.bytes-space.com/ruyao/index/introduction.png");
  background-size: 100% 100%;
  /*兼容小程序*/
  display: flex;
  /* 主轴对齐方式 */
  justify-content: center;
  /* 交叉轴对齐方式 */
  align-items: center;
}

.banner button:active{
  height: 100rpx;
  width: 90%;
  font-size: 30.6rpx;
}
/*----------------------------------banner模块--------end---------------------------------------------------*/


/*----------------------------------main模块----------begin---------------------------------------------------*/

.main button{
  background-size: 100% 100%;
  position: relative;
}

.main button:active {
  font-size: 30.6rpx;
}

.main b{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

/*----------------------------------row1-----begin--------------------------*/
.row1,
.row2{
  width: 100%;
}

.row1 {
  height: 172rpx;
  display: flex;
  /*主轴*/
  justify-content: space-between;
}

.game-box1 {
  height: 172rpx;
  width: 338rpx;
  display: flex;
  /*主轴*/
  justify-content: center;
  /*交叉轴*/
  align-items: center;
  position: relative;
}

.main .game-box1 button {
  height: 172rpx;
  width: 338rpx;
}

.main .game-box1 button:active {
  height: 154rpx;
  width: 304rpx;
}

.personal {
  background-image: url("https://picture.bytes-space.com/ruyao/index/personal.png");
}

.award {
  background-image: url("https://picture.bytes-space.com/ruyao/index/award.png");
}

.challenge {
  background-image: url("https://picture.bytes-space.com/ruyao/index/challenge.png");
}

.rank {
  background-image: url("https://picture.bytes-space.com/ruyao/index/rank.png");
}

.multiple {
  background-image: url("https://picture.bytes-space.com/ruyao/index/multiple.png");
}

.history {
  background-image: url("https://picture.bytes-space.com/ruyao/index/history.png");
}
/*----------------------------------row1-----end----------------------------*/


/*----------------------------------row2-----begin--------------------------*/
.row2 {
  height: 368rpx;
  display: flex;
  /*主轴*/
  justify-content: space-between;
}

.column1 {
  display: flex;
  flex-direction: column;
  /*主轴*/
  justify-content: space-between;
}

.team {
  background-image: url("https://picture.bytes-space.com/ruyao/index/team.png");
}

.arena {
  background-image: url("https://picture.bytes-space.com/ruyao/index/arena.png");
}

.column2 {
  width: 338rpx;
  height: 100%;
  display: flex;
  /*主轴*/
  justify-content: center;
  /*交叉轴*/
  align-items: center;
  position: relative;
}

.settings {
  width: 338rpx;
  height: 100%;
  background-image: url("https://picture.bytes-space.com/ruyao/index/settings.png");
}

.settings:active {
  height: 304rpx;
  width: 304rpx;
}

/*----------------------------------row2-----end----------------------------*/

/*----------------------------------main模块----------end-----------------------------------------------------*/




.top .login {
  position: absolute;
  left: 80rpx;
  top: 80rpx;
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  /* 主轴对齐方式 */
  justify-content: center;
  /* 交叉轴对齐方式 */
  align-items: center;
}