/* pages/others/award/award.wxss */

.top {
  position: fixed;
  height: 100rpx;
  width: 100%;
  box-shadow: 0 6rpx 36rpx #444;
  background-color: #4b7efe;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 100;
}

.top .bar {
  height: 60rpx;
  width: 160rpx;
  font-size: 36rpx;
  color:#fff;
  line-height: 80rpx;
  text-align: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border:1rpx solid #eee;
  box-shadow: 3rpx 3rpx 3rpx #eee;
}

.top .select1 {
  background-color: #e19d9d;
}

.top .select2 {
  background-color: #fbb75f;
}

.top .select3 {
  background-color: #0cf;
}

.top .select4 {
  background-color: #b0d96a;
}


.main {
  margin:116rpx auto 200rpx;
  height: auto;
  width: 650rpx;
}

.main .award {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  border: 6rpx solid #6cf;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.award .title {
  border-bottom: 10rpx solid #98ccfe;
  position: relative;
  height: 120rpx;
}

.award .title image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 20rpx;
  top: 10rpx;
}

.award .divider {
  position: absolute;
  width: 24rpx;
  height: 120rpx;
  left: 160rpx;
  overflow: hidden;
}

.divider .divider-top,
.divider .divider-bottom{
  width: 24rpx;
  height: 24rpx;
  background-color: #98ccfe;
  border-radius: 50%;
  position: absolute;
}

.divider .divider-top {
  top:-12rpx;
}

.divider .divider-bottom {
  bottom: -12rpx;
}

.divider .divider-line {
  width: 1rpx;
  height: 98rpx;
  position: absolute;
  top: 14rpx;
  left: 11.5rpx;
  border-left: 2rpx #98ccfe dashed;
}

.award .title-name {
  color:#000;
  position: absolute;
  left: 220rpx;
  height: 120rpx;
  width: 150rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.award-body {
  min-height: 550rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 20rpx;
  color:#000;
  font-size: 32rpx;
  font-weight: bold;
}

.award-item {
  height: 520rpx;
  width: 280rpx;
  /*background-color: #98ccfe;*/
  border: 3rpx solid #ddd;
  box-shadow: 8rpx 7rpx 2rpx #e9e9e9;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx;
}

.award-item h3 {
  line-height: 72rpx;
}

.award-item p {
  font-size: 26rpx;
  text-align: left;
  line-height: 42rpx;
}

.award-item image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 12rpx;
}

.award-item-left {
  margin-right: 20rpx;
}
