

.main {
  position: fixed;
  width: 690rpx;
  height: 92%;
  top: 8%;
  left: 30rpx;
  background-color: #85d7ff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 10rpx #888;
  padding: 20rpx;
  box-sizing: border-box;
}

.history {
  height: 100%;
  width: 100%;
  background-color: #91e5ff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 10rpx #888;
  position: relative;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}

.history-scroll {
  height: 100%;
  width: 100%;
  overflow: scroll;
  box-sizing: border-box;
}

.title {
  position: absolute;
  width: 300rpx;
  height: 80rpx;
  left: 50%;
  margin-left: -150rpx;
  background: -webkit-linear-gradient(top, #40a1ff, #38a3f1, #61aff9) #4b7eff;
  top: -30rpx;
  z-index: 100;
  border-radius: 50rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
  color:#fff;
}


.history-item {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color:#006498;
  margin-bottom: 40rpx;
}

.history-item view{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #ffba31;
  color:#fff;
}
